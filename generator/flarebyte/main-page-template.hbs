<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{lang}}" lang="{{lang}}">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="{{contentLanguage}}" />

    <title>
      {{title}}
    </title>

    <meta name="ROBOTS" content="ALL" />
    <meta http-equiv="imagetoolbar" content="no" />

    <meta name="Copyright" content="{{copyright}}." />

    <meta name="keywords" content="{{keywords}}" />
    <meta name="description" content="{{description}}" />

    <link
      href="https://media.flairbyte.com/fb2008/en/css/8/homepage.css"
      rel="stylesheet"
      type="text/css"
      media="screen"
    />
    <link
      href="https://media.flairbyte.com/fb2008/en/css/8/print.css"
      rel="stylesheet"
      type="text/css"
      media="print"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://flarebyte.com/flarebyte.logo.icon-16x16.png"
    />
  </head>

  <body id="homepage" class="default">
    <div id="container">
      <div id="header">
        <h1 id="logo">
          <a href="https://flarebyte.com/"><img
              src="https://media.flairbyte.com/fb2008/en/png/logo/8/logo-8.png"
              alt="Flarebyte.com Limited"
            /></a>
        </h1>
        <ul id="nav-global">
          <li id="nav-homepage-en">
            <a href="https://flarebyte.com">{{#if isEnglish}}<u
                >ENGLISH</u>{{/if}}{{#unless isEnglish}}ENGLISH{{/unless}}</a>
          </li>
          <li id="nav-homepage-fr">
            <a href="https://flarebyte.com/fr">{{#if
                isEnglish
              }}FRANCAIS{{/if}}{{#unless isEnglish}}<u
                >FRANCAIS</u>{{/unless}}</a>
          </li>
        </ul>
      </div>
      <!-- END Header -->

      <div id="billboard">
        <h2>{{billboard}}</h2>
      </div>
      <div id="columnwrap">
        <div id="content-main">
          <h1>{{about}}</h1>
          <h2 class="deck">
            {{deck}}:
          </h2>
          <ul>
            {{#each services}}
              <li>{{this}}</li>
            {{/each}}
          </ul>

          <p>
            <a
              href="https://media.flairbyte.com/fb2008/en/png/company/8/java.applications-594x594.png"
            ><img
                src="https://media.flairbyte.com/fb2008/en/png/company/8/java.applications-210x210.png"
                alt="multi-tier diagram"
              /></a>
          </p>
          <div id="content-secondary">
            {{{servicesInfo}}}
          </div>
          <!-- END #content-secondary -->
        </div>
        <!-- END #content-main -->
        <div id="content-related" class="sidebar">
          {{{contact}}}
        </div>
        <!-- END #content-related -->
      </div>
      <!-- END #content -->
      <div id="footer">
        <p>
          {{copyright}}. All rights reserved.
        </p>
      </div>
      <!-- END #footer -->
    </div>
    <!-- END #container -->
  </body>
</html>